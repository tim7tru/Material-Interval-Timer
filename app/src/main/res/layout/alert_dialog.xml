<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dialog"
            type="com.timmytruong.materialintervaltimer.model.Dialog"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            app:layout_constraintTop_toTopOf="@id/action_layout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="@id/action_layout"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/colorGray"
            app:layout_constraintTop_toTopOf="@id/action_layout"
            app:layout_constraintStart_toStartOf="@id/action_layout"
            app:layout_constraintEnd_toEndOf="@id/action_layout"
            app:layout_constraintBottom_toBottomOf="@id/action_layout"/>

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:background="@android:color/transparent"
            android:text="@{dialog.title}"
            android:textSize="@dimen/text_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Save Interval?"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{dialog.message}"
            android:textColor="@color/colorGray"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="@dimen/dialog_message_font"
            android:layout_marginStart="@dimen/margin_sides"
            android:layout_marginEnd="@dimen/margin_sides"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintTop_toBottomOf="@id/dialogTitle"
            tools:text="Sample Text"/>

        <LinearLayout
            android:id="@+id/action_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintTop_toBottomOf="@id/dialogMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_alert_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@{dialog.negativeMessage}"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/colorRed"
                android:layout_marginEnd="1dp"
                android:background="?attr/selectableItemBackground"
                android:textSize="16sp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                app:rippleColor="@color/colorSecondaryAccent"
                app:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_alert_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@{dialog.positiveMessage}"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:layout_marginStart="1dp"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/colorGreen"
                android:textSize="16sp"
                app:rippleColor="@color/colorSecondaryAccent"
                app:backgroundTint="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
